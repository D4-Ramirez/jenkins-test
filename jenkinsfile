pipeline {
    agent any
    
    stages {
        stage('Test feature branch') {
            when {
                branch pattern: "feature/*", comparator: "REGEXP"
            }
            steps {
                checkout scm

                sh 'npm run test'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying'
            }
        }
    }
}
